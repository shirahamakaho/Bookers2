<div>
  <h2>User Info</h2>

  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name
  <%= @user.name %></p>
  <p>introduction
  <%= @user.introduction %></p>
  <%= link_to 'Edit',edit_user_path(current_user.id) %>

  <%= form_with model:@newbook,url:books_path,method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Opinion</h4>
  <%= f.text_area:body %><br>
  <%= f.submit'Create Book' %>
  <% end %>
</div>

<h1>Usersの投稿一覧</h1>

<% @books.each do |book| %>
 <%= link_to user_path(@user.id) do %>
 <%= image_tag @user.get_profile_image(80,80) %>
 <% end %>
 <p>Title
 <%= link_to book_path(book.id) do %>
 <%= book.title %>
 </p>
 <% end %>
 <p>Opibion
 <%= book.body %>
 </p>
<% end %>