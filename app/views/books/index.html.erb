<div>
  <h2>User Info</h2>

  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name
  <%= current_user.name %></p>
  <p>introduction
  <%= current_user.introduction %></p>
  <%= link_to 'Edit',edit_user_path(current_user.id) %>

  <%= form_with model:@newbook,url:books_path,method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Opinion</h4>
  <%= f.text_area:body %><br>
  <%= f.submit'Create Book' %>
  <% end %>
</div>

<div>

  <h1>Books#index</h1>

  <% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
     <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    <p>Title
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
    </p>
    <p>Opinion
    <%= book.body %>
    </p>
  </div>
  <% end %>

</div>