<div>
  <%= render'layouts/userinfo',user:@user,newbook:@newbook %>
</div>

<div>

  <h1>Books#index</h1>

  <% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
     <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    <p>Title
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
    </p>
    <p>Opinion
    <%= book.body %>
    </p>
  </div>
  <% end %>

</div>