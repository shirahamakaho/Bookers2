<div>
  <h2>User Info</h2>

  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>name
  <%= @book.user.name %></p>
  <p>introduction
  <%= @book.user.introduction %></p>
  <%= link_to 'Edit',edit_user_path(current_user.id) %>

  <%= form_with model:@newbook,url:books_path,method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Opinion</h4>
  <%= f.text_area:body %><br>
  <%= f.submit'Create Book' %>
  <% end %>
</div>

<h1>Book detail</h1>

<div>
<p><%= @book.title %>
</p>
<p><%= @book.body %>
</p>
<% if @book.user == current_user %>
<%= link_to "Edit",edit_book_path(@book.id) %>
<%= link_to "Destroy",book_path(@book.id),method: :delete %>
<% end %>
</div>