<div>

  <h2>User Info</h2>

  <!--自分のプロフィール(current_user)-->

  <%= form_with model:@book,url:'/books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Opinion</h4>
  <%= f.text_area:body %><br>
  <%= f.submit'Create Book' %>
  <% end %>

</div>

<div>

  <h1>Books#index</h1>

  <% @books.each do |book| %>
  <div>
    <!--投稿者のプロフ画像-->
    <!--<p>%= image_tag book.user.get_profile_image(100,100) %></p>-->
    <p>Title
    <%= book.title %>
    </p>
    <p>Opinion
    <%= book.body %>
    </p>
  </div>
  <% end %>

</div>